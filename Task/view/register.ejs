<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <style>
        *{
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body{
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            width: 100%;
            position: absolute;
        }   
        input{
            background-color: bisque;
        }
        h2{
            text-align: center;
            margin-bottom:20px;
        }
        .form-container{
            width: 300px;
            margin: 0 auto;
            padding: 20px;
            background-color: antiquewhite;
            border: 1px solid;
            border-radius: 12px;
            text-align: center;
        }
        label{
            display: block;
            font-weight: bold;
            margin-bottom: 20px;
            text-align: left;
        }
        input{
            background-color: bisque;
            width: 100%;
            padding: 8px;
            font-size: 10px;
            border: 1px solid;
            border: radius 3px;
            margin-bottom: 20px;
        }
        .submit-btn{
            display: block;
            font-size: 15px;
            font-family: Impact, Haettenschweiler, 'Arial Narrow Bold',;
            width: 50%;
            margin-left: 65px;
            padding: 10px;
            background-color: rgb(42, 90, 132);
            border: none;
            border-radius: 10px;
            cursor: pointer;
        }
        .submit-btn:hover{
            background-color: rgb(59, 183, 113);
        }
        p{
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Register</h2>
        <form action="/register" method="post" id="reg">
            <div class="from-group">
                <label for="name">First Name</label>
                <input type="text" name="fname" id="name1" required>
            </div>
            <div class="from-group">
                <label for="name">Last Name</label>
                <input type="text" name="lname" id="name2" required>
            </div>
            <div class="from-group">
                <label for="name">E-mail</label>
                <input type="text" name="mail" id="e-mail" required>
                
            </div>
            <div class="from-group">
                <label for="name">Phone number</label>
                <input type="tel" name="number" id="phone" pattern="[0-9]*" oninput="this.value = this.value.replace(/[^0-9.]/g, '');" required>
            </div>
            <!-- <div class="from-group">
                <label for="photo">Profile Photo</label>
                <input type="file" name="image" id="image" accept="image/*">
            </div> -->
            <div class="from-group">
                <label for="name">Password</label>
                <input type="password" name="password1" id="userpassword1" required>
            </div>  
            <div class="from-group">
                <label for="name"> Confirm Password</label>
                <input type="password" name="cpassword" id="userpassword2" required>
            </div>

            <button type="submit" class="submit-btn">Register</button>
        </form>
        <p>Already have an account ?<a href="/login">Login</a></p>
    </div>
    <script>
        const form = document.getElementById("reg");
        form.addEventListener('submit',(e) =>{
            e.preventDefault();

            const firstname = document.getElementById("name1").value;
            const lasttname = document.getElementById("name2").value;
            const mail = document.getElementById("e-mail").value;
            const phonenum = document.getElementById("phone").value;
            const password = document.getElementById("userpassword1").value;
            const cpassword = document.getElementById("userpassword2").value;

            if(firstname.length <3){
                alert("Enter valid first name");
                return;
            }
            if(lasttname.length <3){
                alert("Enter valid last name");
                return;
            }
            if(!validateEmail(mail)){
                alert("Enter a vail mail address")
            }
            if(!phnValidate(phonenum)){
                alert("Enter valid phone number");
                return;
            }
            if(password.length <3 || !password){
                alert("Enter a valid password");
                return;
            }
            if(cpassword!== password){
                alert("Make sure that both your passwords are the same");
                return;
            }
            else{
                form.submit();
            }
        });
        function validateEmail(email) {
            const re = /\S+@\S+\.\S+/;
            return re.test(email);
        }

    // Regular expression for phone number validation
        function phnValidate(phone) {
            const re = /^\d{10,15}$/;
            return re.test(phone);
        }     
    </script>
</body>
</html>