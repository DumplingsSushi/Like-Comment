<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            width: 900px;
            align-content: center;
            margin-left:20%;    
        }
        .logout-btn{
            background-color: red;
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .header button {
            margin: 10px;
            background-color: #4CAF50;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .header button:hover {
            background-color: #3e8e41;
        }

        .post-btn {
            float: none;
            margin-right: 20px;
        }

        .logout-btn {
            float: right;
            margin-left: 20px;
        }

        img {
            align-self: center;
            width: 500px; 
            height: 350px; 
            object-fit: cover; 
            border-radius: 10px; 
            margin: 10px; 
        }
        caption{
            text-align: center;
        }

        .like-btn, button[type="submit"] {
            background-color: #7f751e;
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
        }

        .like-btn:hover, button[type="submit"]:hover {
            background-color: #3e8e41;
        }

        .post-block {
            margin-bottom: 20px;
            padding: 20px;
            border-bottom: 1px solid #ccc;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-top: 0;
        }

        h3 {
            font-weight: normal;
            font-size: 16px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1> welcome <%= username %></h1>
        <button id="post-btn" class="post-btn">Add Post</button> 
        <form action="/logout" method="post" class="logout-form">
            <button type="submit" class="logout-btn">Logout</button>
        </form>
    </div>
    <h2>Posts</h2>

    <% posts.forEach(post => { %>
        <div class="post-block">
            <h2><%= post.title %></h2><h3>By <%= post.artist %></h3>
            <img src="./uploads/<%= post.photo %>" alt="<%= post.title %>" />
            
            <p class="caption"><%= post.content %></p>
            <p>
                <span class="like "><%= post.likes.length %> likes</span><br>
                <% if (post.userId.toString() !== id.toString()) { %>
                    <button class="like-btn" data-post-id="<%= post._id %>">Like</button>
                <% } %><br>
                <span class="comment"><%= post.comments.length %> comments</span>
                
            </p>
            <% if(post.userId.toString()!== id.toString()) { %>
                <form action="/comment" method="post">
                    <input type="hidden" name="postId" value="<%= post._id %>" />
                    <input type="text" name="comment" placeholder="Enter your comment" />
                    <button type="submit">Comment</button>
                </form>
            <% } %>
            <ul>
                <% post.comments.forEach(comment => { %>
                <li><%= comment.content %></li>
                <% }); %>
            </ul>
        </div>
    <% }); %>

    <script>
        document.getElementById('post-btn').addEventListener('click', () => {
            // Redirect the user to the registration page
            window.location.href = '/uploadpost';
        });
        document.querySelectorAll('.like-btn').forEach(btn => {
            btn.addEventListener('click', async () => {
                const postId = btn.getAttribute('data-post-id');
                try {
                const response = await fetch('/like', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ postId }),
                });
                const result = await response.json();
                if (result.success) {
                    const likeCount = document.querySelector(`[data-post-id="${postId}"] + span`);
                    likeCount.textContent = `${result.likes} likes`;
                }
                } catch (err) {
                console.error(err);
                }
            });
        });
    </script>
</body>
</html>